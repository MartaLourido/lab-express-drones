<h2>Update the drone</h2>

<form method="POST" action="/drones/{{drone._id}}/edit" >
  <div class="form-group">
    <label for="droneName">Name</label>
    <input name="name" type="text" class="form-control" id="droneName" value="{{drone.name}}">
  </div>
  <div class="form-group">
    <label for="dronePropellers">Propellers</label>
    <input name="propellers" type="number" class="form-control" id="dronePropellers" value="{{drone.propellers}}">
  </div>
  <div class="form-group">
    <label for="droneMaxSpeed">maxSpeed</label>
    <input name="maxSpeed" type="number" class="form-control" id="droneMaxSpeed"  value="{{drone.maxSpeed}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>